#!/bin/bash
set -e
set -x

if [[ $# -ne 1 ]]; then
	echo "Usage: $0 port" >&2
	exit 1
fi
port=$1

function unbind_ports {
	/sbin/sysctl -w fs.nfs.nlm_tcpport=0 fs.nfs.nlm_udpport=0
}
trap unbind_ports EXIT

/sbin/sysctl -w fs.nfs.nlm_tcpport=$port fs.nfs.nlm_udpport=$port

while true; do
	sleep 1d
done
